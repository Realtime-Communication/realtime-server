{
  "info": {
    "name": "ChatChit API",
    "description": "Postman collection for ChatChit API - Users and Admin modules",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Users",
      "description": "Endpoints for user management",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            },
            "description": "Get current authenticated user's information"
          },
          "response": []
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/1",
              "host": ["{{base_url}}"],
              "path": ["users", "1"]
            },
            "description": "Get user information by ID (users can only view their own information)"
          },
          "response": []
        },
        {
          "name": "Update User",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Updated\",\n  \"lastName\": \"User\",\n  \"email\": \"user@example.com\",\n  \"phone\": \"1234567890\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/1",
              "host": ["{{base_url}}"],
              "path": ["users", "1"]
            },
            "description": "Update user information (users can only update their own information)"
          },
          "response": []
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"current_password_here\",\n  \"newPassword\": \"new_secure_password\",\n  \"confirmNewPassword\": \"new_secure_password\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/1/change-password",
              "host": ["{{base_url}}"],
              "path": ["users", "1", "change-password"]
            },
            "description": "Change user password (users can only change their own password)"
          },
          "response": []
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/1",
              "host": ["{{base_url}}"],
              "path": ["users", "1"]
            },
            "description": "Delete user account (users can only delete their own account)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin",
      "description": "Endpoints for admin management",
      "item": [
        {
          "name": "Account Management",
          "item": [
            {
              "name": "Get Accounts",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{admin_token}}",
                    "type": "text"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/admin/accounts?page=1&limit=10&role=USER&isActive=true&isBlocked=false",
                  "host": ["{{base_url}}"],
                  "path": ["admin", "accounts"],
                  "query": [
                    {
                      "key": "page",
                      "value": "1"
                    },
                    {
                      "key": "limit",
                      "value": "10"
                    },
                    {
                      "key": "role",
                      "value": "USER"
                    },
                    {
                      "key": "isActive",
                      "value": "true"
                    },
                    {
                      "key": "isBlocked",
                      "value": "false"
                    }
                  ]
                },
                "description": "Get paginated list of accounts with optional filters"
              },
              "response": []
            },
            {
              "name": "Update Account",
              "request": {
                "method": "PATCH",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{admin_token}}",
                    "type": "text"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"role\": \"ADMIN\",\n  \"isActive\": true,\n  \"isBlocked\": false,\n  \"levelLeft\": 0,\n  \"levelRight\": 10\n}",
                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "{{base_url}}/admin/accounts/2",
                  "host": ["{{base_url}}"],
                  "path": ["admin", "accounts", "2"]
                },
                "description": "Update account information (admin only)"
              },
              "response": []
            }
          ]
        },
        {
          "name": "Report Management",
          "item": [
            {
              "name": "Get Reports",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{admin_token}}",
                    "type": "text"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/admin/reports?page=1&limit=10&status=PENDING&type=INAPPROPRIATE_CONTENT",
                  "host": ["{{base_url}}"],
                  "path": ["admin", "reports"],
                  "query": [
                    {
                      "key": "page",
                      "value": "1"
                    },
                    {
                      "key": "limit",
                      "value": "10"
                    },
                    {
                      "key": "status",
                      "value": "PENDING"
                    },
                    {
                      "key": "type",
                      "value": "INAPPROPRIATE_CONTENT"
                    }
                  ]
                },
                "description": "Get paginated list of reports with optional filters"
              },
              "response": []
            },
            {
              "name": "Update Report",
              "request": {
                "method": "PATCH",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{admin_token}}",
                    "type": "text"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"status\": \"RESOLVED\",\n  \"notes\": \"Issue has been addressed\"\n}",
                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "{{base_url}}/admin/reports/1",
                  "host": ["{{base_url}}"],
                  "path": ["admin", "reports", "1"]
                },
                "description": "Update report status and notes (admin only)"
              },
              "response": []
            }
          ]
        },
        {
          "name": "Conversation Management",
          "item": [
            {
              "name": "Get Conversations",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{admin_token}}",
                    "type": "text"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/admin/conversations?page=1&limit=10&userId=1&type=GROUP",
                  "host": ["{{base_url}}"],
                  "path": ["admin", "conversations"],
                  "query": [
                    {
                      "key": "page",
                      "value": "1"
                    },
                    {
                      "key": "limit",
                      "value": "10"
                    },
                    {
                      "key": "userId",
                      "value": "1"
                    },
                    {
                      "key": "type",
                      "value": "GROUP"
                    }
                  ]
                },
                "description": "Get paginated list of conversations with optional filters"
              },
              "response": []
            },
            {
              "name": "Delete Conversation",
              "request": {
                "method": "DELETE",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{admin_token}}",
                    "type": "text"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/admin/conversations/1",
                  "host": ["{{base_url}}"],
                  "path": ["admin", "conversations", "1"]
                },
                "description": "Delete a conversation (admin only)"
              },
              "response": []
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your_user_jwt_token_here",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "your_admin_jwt_token_here",
      "type": "string"
    }
  ]
}
